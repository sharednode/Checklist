<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:util="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_holo">
    <revolution.checklist.ui.util.RTextView
        android:id="@+id/project_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shared Node"
        android:padding="12dp"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/gray"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        util:fontName="Roboto-Light"/>
    <ListView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lv_drawer"
        android:layout_below="@+id/project_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/dark_holo"
        tools:context="revolution.checklist.ui.util.NavigationDrawerFragment"/>
</RelativeLayout>

