<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header alignLogo">
      <a href="/">
        <img src="/images/logo.png" alt="logo" class="logo">
      </a>
      <a class="navbar-brand" href="/">Checklist</a>
    </div>

    <% if (user) { %>
      <div class="navbar-right">

          <a class="btn btn-success margin-space" href="/account" role="button">
             <span class="glyphicon glyphicon-user"></span>  <%= user._id %>
          </a>

          <a class="btn btn-primary margin-space" href="/account/logout" role="button">
            <span class="glyphicon glyphicon-log-out"></span> Logout 
          </a>
      </div>
    <% } else { %>
      <div class="navbar-right">
        <a class="btn btn-primary margin-space" href="/account/login" role="button">
         <span class="glyphicon glyphicon-log-in"></span> Login 
        </a>
      </div>
    <%}%>
  </div>
</div>



