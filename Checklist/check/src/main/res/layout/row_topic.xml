<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:util="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/red"
    android:layout_margin="8dp">
    <revolution.checklist.ui.util.RTextView
        android:id="@+id/topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usability"
        android:textColor="@color/black"
        android:padding="8dp"
        android:textSize="16sp"
        util:fontName="Roboto-Bold"/>
    <revolution.checklist.ui.util.RTextView
        android:id="@+id/topic_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="3"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:text="Isto é um exemplo de uma descrição bacana.\nSou um boss."
        android:layout_below="@+id/topic_title"
        util:fontName="Roboto-Regular"/>

    <CheckBox
        android:id="@+id/topic_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        style="?android:attr/checkboxStyle" />
</RelativeLayout>